{
  "name": "codetrader",
  "displayName": "CodeTrader",
  "icon": "images/logo.jpg",
  "description": "CodeTrader - 专业的VS Code股票实时监控插件",
  "version": "1.4.0",
  "publisher": "pbstar",
  "engines": {
    "vscode": "^1.74.0"
  },
  "scripts": {
    "package": "vsce package",
    "rebuild": "bash scripts/rebuild.sh",
    "install-local": "code --install-extension $(ls -t *.vsix | head -1)"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "watchStock",
          "title": "CodeTrader",
          "icon": "$(graph)"
        }
      ]
    },
    "views": {
      "watchStock": [
        {
          "id": "watchStockIndex",
          "name": "股票看板",
          "icon": "$(graph)"
        }
      ]
    },
    "commands": [
      {
        "command": "codetrader.addStock",
        "title": "添加自选股票"
      },
      {
        "command": "codetrader.removeStock",
        "title": "移除自选股票"
      },
      {
        "command": "codetrader.clearStocks",
        "title": "清空自选股票"
      },
      {
        "command": "codetrader.manageStock",
        "title": "管理股票",
        "icon": "$(gear)"
      },
      {
        "command": "codetrader.toggleVisibility",
        "title": "显示/隐藏状态栏"
      },
      {
        "command": "codetrader.refreshData",
        "title": "刷新行情数据"
      },
      {
        "command": "codetrader.showHoverPanel",
        "title": "显示股票详情悬浮框"
      },
      {
        "command": "codetrader.handleStatusBarClick",
        "title": "处理状态栏点击"
      }
    ],
    "configuration": {
      "title": "CodeTrader",
      "properties": {
        "codetrader.stocks": {
          "type": "array",
          "default": [
            "sh000001"
          ],
          "description": "自选股票代码列表",
          "items": {
            "type": "string"
          }
        },
        "codetrader.indices": {
          "type": "array",
          "default": [
            "sh000001",
            "sz399001",
            "sz399006",
            "sh000688",
            "bj899050"
          ],
          "description": "指数代码列表(在股票看板中显示)",
          "items": {
            "type": "string"
          }
        },
        "codetrader.sectors": {
          "type": "array",
          "default": [
            "sh515880",
            "sh512690",
            "sh562500",
            "sz159206",
            "sh512880",
            "sh512480",
            "sz159755",
            "sh515220",
            "sh512400",
            "sz159227",
            "sz159995",
            "sz159857",
            "sh515120",
            "sz159869",
            "sh512170",
            "sh517520",
            "sh512660",
            "sz159852",
            "sh512800",
            "sz159766",
            "sh512980",
            "sz159825"
          ],
          "description": "板块代码列表(在股票看板中显示)",
          "items": {
            "type": "string"
          }
        },
        "codetrader.maxDisplayCount": {
          "type": "number",
          "default": 5,
          "description": "状态栏最大显示股票数量"
        },
        "codetrader.showTwoLetterCode": {
          "type": "boolean",
          "default": false,
          "description": "状态栏是否显示2位简称"
        },
        "codetrader.enableMonitor": {
          "type": "boolean",
          "default": false,
          "description": "是否开启自选股票异动监控"
        },
        "codetrader.hoverPanelHideDelay": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 5000,
          "description": "[已弃用] 股票详情面板不再自动隐藏，需要用户手动关闭"
        }
      }
    },
    "keybindings": [
      {
        "command": "codetrader.toggleVisibility",
        "key": "ctrl+alt+s",
        "mac": "cmd+alt+s",
        "when": "editorTextFocus || !editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codetrader.manageStock",
          "when": "view == watchStockIndex",
          "group": "navigation"
        }
      ]
    }
  },
  "dependencies": {},
  "keywords": [
    "CodeTrader",
    "stock",
    "股票",
    "行情",
    "finance"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pbstar/watch-stock"
  },
  "bugs": {
    "url": "https://github.com/pbstar/watch-stock/issues"
  },
  "homepage": "https://github.com/pbstar/watch-stock#readme"
}
